<% content_for :head do %>
  <script type="text/javascript"
          src="https://www.google.com/jsapi?autoload={
            'modules':[{
              'name':'visualization',
              'version':'1',
              'packages':['line', 'corechart']
            }]
          }"></script>
<% end %>

<div class="row" style="text-align: center;">
  <%= content_tag :h1, "Flight From #{@trip.get_sources} To #{@trip.get_destinations}" %>
  <%= content_tag :h2, "Departing #{@trip.get_departure_date} and Returning #{@trip.get_return_date}" %>
  <br/><br/>

  <% javascript "/flights/#{@trip.id}/flight_chart" %>

  <div id="chart" style="width: 900px; height: 500px; font-family: serif; text-align: center; margin: 0 auto; "></div>
</div>
