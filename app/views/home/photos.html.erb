<% @albums.each do |album| %>
    <%= content_tag :h1, album[:title] %>

    <% album[:thumbnails].each_slice(3) do |three_files| %>
        <div class="row">
          <% three_files.each do |file_name| %>
              <%= content_tag :div, :class => 'col-xs-4' do %>
                  <%= content_tag :a, :href => file_name do %>
                      <%= image_tag file_name, :class => 'img-rounded img-responsive' %>
                  <% end %>
                  <br>
              <% end %>
          <% end %>
        </div>
    <% end %>
<% end %>
